<% if @messages %>
<% @messages.each do |message| %>
    <div>
        <%= message.body %>
    </div>
<% end %>
<% end %>
<%= form_for [@conversation, @message] do |f| %>
    <%= f.text_field :body %>
    <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
    <%= f.submit "Send" %>
<% end %>
